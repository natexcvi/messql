{
  "name": "messql",
  "version": "1.0.0",
  "description": "A PostgreSQL client for macOS",
  "main": "dist/main.js",
  "build": {
    "appId": "com.example.messql",
    "mac": {
      "icon": "icon.iconset/Icon-macOS-Dark-1024x1024@2x.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/main.js",
      "dist/bundle.js",
      "dist/preload.js",
      "dist/index.html",
      "dist/services/**/*",
      "logo.icns"
    ],
    "extraResources": [
      "logo.icns",
      "icon.iconset"
    ]
  },
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "dev": "npm run dev:main & npm run dev:renderer",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "webpack serve --mode development",
    "start": "electron .",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "postgresql",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.4",
    "@types/pg-format": "^1.0.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.8.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.12.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-sql": "^6.5.4",
    "@codemirror/language": "^6.11.2",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.22.0",
    "@lezer/highlight": "^1.2.1",
    "codemirror": "^6.0.1",
    "keytar": "^7.9.0",
    "pg": "^8.11.0",
    "pg-format": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "thememirror": "^2.0.1"
  }
}
